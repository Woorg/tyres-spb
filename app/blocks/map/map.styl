.map
	position relative
	margin-bottom 29px
	height 350px
	+rmin($md)
		height 600px
		
	+rmin($lg)
		margin-bottom 0


	&__object
		position absolute
		top 0
		left 0
		width 100%
		height 100%
	&__container
		position relative
		z-index 1
		
		+rmin($md)
			padding-top 40px
		
	&__top
		border-bottom 1px solid #dadadf
		padding-top 25px
		margin-left 16px
		margin-right 16px
		background #FFF
		
		// +rmin($md)
		// 	margin-left 30px
		// 	margin-right 30px
			
		 
	&__addresses
		position absolute
		top 50px
		left 15px
		bottom 90px
		border 1px solid #dadadf
		padding-left 13px
		padding-right 13px
		// padding-bottom 30px
		max-width 370px
		width 100%
		height 466px
		background-color #ffffff
		border-radius 5px
		box-shadow 0 2px 8px rgba(0, 0, 0, 0.1)
		display none
		
		+rmin($md)
			top 40px
			left 9px
			display block
			
		+rmin($lg)
			top 50px
			left 15px

	&__addresses_hide
		width 10px
		height 10px
		
		.nicescroll-rails
			display none !important

		
	&__w
		max-height 444px
		display block
		overflow hidden

	&__w_hide
		display none

	&__item
		&:nth-child(odd)
			background #fff
		
		&:nth-child(even)
			background #f5f6f8

	a.map__close
		resetbutton()
		position absolute
		top 0
		left calc(100% + 10px)
		padding-top 10px
		padding-right 15px
		padding-bottom 3px
		padding-left 32px
		height 32px
		background-color #7f8fa4
		color #ffffff
		font-size 12px
		line-height 1
		cursor pointer
		border-radius 4px
		box-shadow 0 2px 8px rgba(0, 0, 0, 0.1)
		&:after
			position absolute
			content '' 
			top 50%
			left 15px
			retinaSprite($arrow_rounded_group)
			transform translateY(-50%) rotate(0deg)
			tr(all .3s ease)
			
		&:hover,
		&:focus
			color #ffffff
			


		&.map__close_active
			left 0
			color #ffffff
			&:after
				transform translateY(-50%) rotate(180deg)
				tr(all .3s ease)

