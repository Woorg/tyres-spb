.subnav
	&__list
		position relative
		z-index 1
		display none
		padding-top 16px
		padding-right 24px
		padding-bottom 16px
		padding-left 24px
		background #FFFFFF
		box-shadow 0px 12px 48px rgba(19, 60, 84, 0.08)
		border-radius 0px 0px 4px 4px
		
	&__item
		border-bottom 1px solid #EEE 
		padding-left 10px
		&:last-child
			border-bottom 1px solid transparent 
		
	&__item_active
		.subnav__link
			color #268AE1

	&__link
		padding-top 8px
		padding-bottom 8px
		display block
		color #383D42
		font-family $a
		font-weight 600
		font-size 14px
		line-height 1.714
		letter-spacing 0.02em
		text-transform uppercase
		text-decoration none 
		tr(color .3s ease)
		
		&:hover
			color #268AE1
			tr(color .3s ease)