.tabs
	display block
	&__nav
		margin-bottom 20px
		border-bottom 1px solid #ececec 
		display flex
				
	&__item
		position relative
		margin-right 40px
		// &.tabs__item_active,
		&.active
			.tabs__link
				color #333333
				font-weight 600
				&:before
					background-color #268ae1
		&:last-child
			margin-right 0
			
	&__link
		position relative
		padding-bottom 10px
		display block
		color #8b9095
		font-family $o
		font-size 14px
		font-weight 400
		line-height 1.714
		cursor pointer
		tr(all .3s ease)
		&:before
			position absolute
			z-index 1
			content "" 
			top calc(100% - 3px)
			left 0
			width 100%
			height 3px
			background-color transparent
			
		&:hover,
		&:focus
			color #333333
			text-decoration none
			
	// &__content
	// 	overflow hidden
		
	&__tab
		display block
		height 0
		opacity 0
		// opacity 0
		tr(all .3s ease)
		&.active
			height auto
			opacity 1
			tr(all .3s ease)
			

			
