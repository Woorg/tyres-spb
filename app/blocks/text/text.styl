.text
	&__container
		padding-top 30px
		padding-bottom 18px
		
		+rmin($md)
			padding-top 40px
		
		+rmin($lg)
			padding-top 51px
			padding-bottom 49px
			
	&__col 
		display flex
		align-items flex-start

	&__image
		display none
		
		+rmin($md)
			margin-top -3px
			margin-left 3px
			margin-right 30px
			flex-shrink 0
			flex-grow 1
			flex-basis 155px
			max-width 265px
			display block
		
		+rmin($lg)
			margin-right 59px
			flex-basis 265px
			
			
		