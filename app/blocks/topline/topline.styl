.topline
	background-color #fbfbfb 
	&__container
		@extends .in
		padding-top 10px
		padding-bottom 10px
		display flex
		justify-content flex-start
		align-items center
		+r($sm)
			padding-top 18px
			padding-bottom 18px
	// &__col
	// 	display flex
	// 	align-items center
	&__city
		position relative
		margin-right 16px
		padding-left 26px
		// max-width 120px
		min-width 120px		
		height 100%
		display flex
		align-items center
		flex-grow 1
		flex-shrink 1 
		
		flex-basis 120px 
		font-family $r
		font-weight 500 
		font-size 14px
		line-height 1.571
		white-space nowrap 
		// overflow hidden
		+rmin($sm)
			margin-right 40px
			
	&__city-icon
		position absolute
		top 50%
		left 0
		width 16px
		height 20px
		fill #adaead
		transform translateY(-50%)
		+r($sm)
			margin-right 9px
		
	&__city-text
		padding-right 5px
		+r($sm)
			display none
		
	&__city-link
		position relative
		padding-right 17px
		color #0d62ad
		font-weight 500
		text-decoration none
		text-overflow ellipsis
		&:after
			position absolute
			content '' 
			top 100%
			left 0
			width 100%
			height 1px
			background #CED3D7
			tr(background .3s ease)
		&:hover
			&:after
				background transparent
				tr(background .3s ease)
				
	&__city-arrow
		position absolute
		top 50%
		right 0
		width 11px
		height 6px
		fill #000000
		transform translateY(-50%)
				
		// 	border-bottom 1px solid transparent 
		

	&__phone
		position relative
		margin-left auto
		color #222223
		font-family $a
		font-size 16px
		font-weight 600
		line-height 1.5
		white-space nowrap
		text-decoration none
		text-overflow ellipsis
		overflow hidden
		+r($sm)
			padding-right 17px
			

		
	&__phone_state
		display none
		+r($sm)
			display flex
			
	&__phone-icon
		position absolute
		top 50%
		right 0
		width 9px
		height 5px
		fill #777777
		transform translateY(-50%)
		

	&__nav
		+r($sm)
			display none

	&__personal-w
		margin-left auto
		display flex
		align-items center
		+r($sm)
			display none
		
	&__button
		margin-right 22px
		padding-top 11px
		padding-right 17px
		padding-bottom 8px
		padding-left 17px
		white-space nowrap
		+r($sm)
			display none

	&__personal
		display flex
		align-items center
		color #0d62ad
		font-family $r
		font-size 14px
		
	&__user
		position relative
		padding-right 15px	
		padding-left 32px
		color #0d62ad
		font-weight 500
		text-decoration none	
		&:after
			position absolute
			content ''	
			top 50%
			right 0	
			width 1px
			height 20px
			background-color #c4c4c4
			transform translateY(-50%)


				
	&__user-icon
		position absolute
		top 50%
		left 0
		width 20px
		height 20px
		fill #616365
		transform translateY(-50%)		
		
	&__user-logout
		padding-left 15px
		color #333333
		text-decoration none	
			
		
		
		

