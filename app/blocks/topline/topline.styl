.topline
	background-color #fbfbfb 
	&__container
		padding-top 10px
		padding-bottom 10px
		display flex
		justify-content flex-start
		align-items center
		+r($es)
			padding-top 18px
			padding-bottom 18px
	&__col
		display flex
		align-items center
	&__city
		position relative
		margin-right 40px
		padding-left 26px
		height 100%
		display flex
		align-items center
		flex-grow 0
		flex-shrink 1 
		flex-basis auto 
		font-size $r
		font-weight 500 
		font-size 14px
		line-height 1.571
		white-space nowrap 
		// overflow hidden
		+r($es)
			max-width 116px
			
	&__city-icon
		position absolute
		top 50%
		left 0
		width 16px
		height 20px
		fill #adaead
		transform translateY(-50%)
		+r($es)
			margin-right 9px
		
	&__city-text
		padding-right 5px
		+r($es)
			display none
		
	&__city-link
		position relative
		padding-right 17px
		color #0d62ad
		font-weight 600
		text-decoration none
		text-overflow ellipsis
		&:after,
		&:before
			position absolute
			content '' 
		&:after
			top 100%
			left 0
			width 100%
			height 1px
			background #CED3D7
			tr(background .3s ease)
		&:before
			top 50%
			right 0
			transform translateY(-50%)
		&:hover
			&:after
				background transparent
				tr(background .3s ease)
				
		// 	border-bottom 1px solid transparent 
		

	&__phone
		margin-left auto
		color #222223
		font-family $a
		font-size 16px
		font-weight 400
		line-height 1.5
		text-decoration none
		
	&__phone_state
		display none
		+r($es)
			display flex
	&__nav
		+r($es)
			display none

	&__personal-w
		margin-left auto
		display flex
		align-items center
		+r($es)
			display none
		
	&__button
		margin-right 22px
		padding-top 11px
		padding-right 17px
		padding-bottom 8px
		padding-left 17px
		white-space nowrap
		+r($es)
			display none

	&__personal
		display flex
		align-items center
		color #0d62ad
		font-family $r
		font-size 14px
		
	&__user
		position relative
		padding-right 15px	
		padding-left 32px
		color #0d62ad
		font-weight 500
		text-decoration none	
		&:after
			position absolute
			content ''	
			top 50%
			right 0	
			width 1px
			height 20px
			background-color #c4c4c4
			transform translateY(-50%)


				
	&__user-icon
		position absolute
		top 50%
		left 0
		width 20px
		height 20px
		fill #616365
		transform translateY(-50%)		
		
	&__user-logout
		padding-left 15px
		color #333333
		text-decoration none	
			
		
		
		

