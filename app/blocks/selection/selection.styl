.selection
	position relative
	z-index 1
	background-color #f6f7f9
	&__container
		padding-top 20px
		padding-bottom 0
		+rmin($sm)
			padding-bottom 30px
		+rmin($lg)
			padding-top 50px
			padding-bottom 50px	
		
	// &__row
		
	&__col 
		margin-bottom 30px
		+rmin($lg)
			margin-bottom 0
	&__title	
		margin-bottom 10px
		
		+rmin($md)
			font-size 18px
			
		+rmin($lg)
			margin-bottom 20px

	&__title_main
		+rmin($md)
			display none

	&__title_inner
		display none
		+rmin($md)
			display block
			
	// &__tabs
		
	// 	background-color #ffffff
	// 	box-shadow 0 4px 10px rgba(78, 88, 98, 0.1)
			
	&__filter
		+rmin($md)
			border 1px solid #dadadf
			padding-bottom 20px
			background-color #ffffff
			border-radius 4px
			box-shadow 0 4px 10px rgba(78, 88, 98, 0.1)
			tr(all .3s ease)
			
		+rmin($lg)
			height 370px
			height 350px
		
		&:hover
			+rmin($md)
				box-shadow 0 12px 24px rgba(73, 91, 106, 0.06)
				tr(all .3s ease)
				


	&__block
		padding-top 0
		padding-bottom 20px
		background-color #ffffff
		box-shadow none
		border-radius 4px
		border 1px solid #dadadf
		box-shadow 0 4px 10px rgba(78, 88, 98, 0.1)
		+rmin($md)
			border none
			padding-left 0
			padding-right 0
			background transparent 
			box-shadow none
		
		// +rmin($lg)
		// 	min-height 306px
		
		&.selection__tabs
			padding-bottom 0
			
	&__block_compute
		padding-left 15px
		padding-right 15px
		
		.selection__block_inner
			padding-top 20px
			+rmin($md)
				padding-top 30px
			+rmin($lg)
				padding-top 20px
				padding-bottom 0
				
		.form__col
			+rmin($md)
				width 33%
			
		.form__field_select
			+rmin($md)
				max-width 200px
			
		.form__row_select
			.form__col
				+rmin($lg)
					width 50%
			
		.form__row_buttons
			// +rmin($md)
			// 	margin-top 0
			.form__col
				+rmin($md)
					padding-left 5px
					padding-right 5px
					width 25%
				+rmin($lg)
					width 45%

		.form__row_checkbox
			+rmin($lg)
				margin-right -10px
				justify-content space-between
				
			.form__col
				+rmin($md)
					width 30%
				+rmin($lg)
					width auto
					width 50%

				
		
			
	
			
	&__block_inner
		border none
		margin-bottom 0
		padding-top 30px
		padding-bottom 0px
		box-shadow none
		+rmin($md)
			padding-left 15px
			padding-right 15px
		
		
	// &__tires
		
.select-tires,
.select-disks
	position relative
	// padding-bottom 20px
	+rmin($md)
		z-index 1
	
	.selection__title
		+rmin($md)
			margin-left -15px	

	.selection__image
		position absolute
		bottom -30px
		right 0
		width 32px
		height 44px
		+rmin($md)
			// right -15px
			bottom 1px
			width 74px
			height 101px
			border-radius 0 0 4px 0  
			
		.selection__image
			bottom 30px
		
	.selection__block
		padding-bottom 0
		
	.selection__block_inner
		+rmin($lg)
			padding-left 0
			padding-right 0
		
		
.select-tires
	
	.selection__image
		+rmin($lg)
			bottom 30px
			bottom 1px
	
	.selection__filter
		+rmin($lg)
			margin-top 58px
			// height 348px
			// height 332px
			height 312px
	
	.tabs__nav
		+rmin($lg)
			position absolute
			top -37px
			left 0
			right 0
			border-radius 6px 6px 0 0  
		.tabs__item
			&.active
				.tabs__link
					+rmin($lg)
						background #FFF
						color #212121
						
			&:last-child
				+rmin($lg)
					border-radius 0 6px 0 0  
				.tabs__link
					+rmin($lg)
						background #EAEAEA
						border-radius 0px 6px 0 0px
						
				&.active
					.tabs__link
						+rmin($lg)
							border none
							background #fff
							border-radius 0px 6px 0 0px
			&:first-child
				+rmin($lg)
					border-radius 6px 0 0 6px  
					
				.tabs__link
					+rmin($lg)
						background #EAEAEA
						border-radius 6px 0 0 0
				&.active
					.tabs__link
						+rmin($lg)
							border none
							background #fff 
							border-radius 6px 0 0 0

		.tabs__link
			+rmin($lg)
				border none
				padding-bottom 10px
				background #EAEAEA

			span
				+rmin($lg)
					border-bottom 1px dotted #212121
	



	.selection__block_inner
		+rmin($lg)
			padding-top 57px
			padding-top 40px
			
		// .tabs__content
		// 	+rmin($lg)
		// 		height auto
			
	.form__row_select
		.form__col
			+rmin($lg)
				width 33%
				
		.form__col_full
			+rmin($lg)
				width 100%
				
	.form__field_select
				
		.selectize-control.single 
			.selectize-input
				+rmin($lg)
					box-shadow 0px 4px 10px rgba(78, 88, 98, 0.1)
				&:focus
					+rmin($lg)
						border 2px solid #268AE1
						border-radius 4px
				
	.form__row_buttons
		.form__col
			+rmin($lg)
				// width 50%
				margin-top 24px
				// flex-grow 1
				width 40%
				
	.form__label
		display none
		+rmin($lg)
			display block
			
	.form__reset
		
		+rmin($lg)
			position relative
			background transparent 
			font-family $a
			font-weight 600 
			font-size 15px 
			color #5D5F63 
			text-decoration none
			text-transform none
		span
			+rmin($lg)
				border-bottom 1px dotted #5D5F63
				display inline-block
		&:after
			display none
			+rmin($lg)
				position absolute
				top calc(50% + 1px)
				left 0
				content ''
				display block
				width 20px
				height 20px
				background url('data:image/svg+xml;base64,')
				transform translateY(-50%)
				


.select-disks
	+rmin($md)
		z-index 1
	.tabs__item
		
		+rmin($md)
			max-width 330px
		
	.selection__col
		
		+rmin($md)
			margin-bottom 0

	.selection__image
		width 32px
		height 44px
		+rmin($md)
			width 80px
			height 109px
		+rmin($lg)
			bottom 40px
			bottom 1px
		
	.selection__block_inner
		+rmin($md)
			padding-left 0
			padding-right 150px
			
		
		+rmin($lg)
			padding-top 20px
			
			padding-right 0
			

	.form__col
		+rmin($md)
			width 33%
		
		+rmin($lg)
			width 50%
			
	.form__row_buttons
		+rmin($md)
			margin-top 0
		.form__col
			+rmin($md)
				padding-left 5px
				padding-right 5px
				width 25%
				
			+rmin($lg)
				width 45%
				
	// .form__field_select
	// 	+rmin($md)
	// 		z-index 0
		

	.form__reset
		+rmin($md)
			border 1px solid #268ae1
			background-color #fff
			color #268ae1
			font-family $a
			font-weight 500 
			letter-spacing 0.96px
			text-transform uppercase
			&:hover
				color #fff
				background-color #268ae1