.featured
	background #fff 
	&__container
		position relative
		padding-top 30px
		padding-bottom 10px
		
		+rmin($md)
			padding-top 41px
		
		+rmin($lg)
			padding-top 50px
			padding-bottom 20px

	&__title
		margin-bottom 10px
		
		+rmin($md)
			margin-bottom 20px
			margin-left 4px
			display flex
			
		+rmin($lg)
			margin-bottom 30px

	&__tabs
		.tabs__nav
			margin-bottom 8px
			
			+rmin($md)
				position absolute
				top 44px
				right 21px
				
			+rmin($lg)
				top 54px
				
	&__list
		
		// +rmin($md)
		// 	margin-left 3px
		// 	margin-right 2px
		
	&__nav
		margin-left -20px
		margin-right -20px
		display none

	&__arrow 
		resetbutton()
		position absolute
		z-index 1
		top calc(50% + 48px)
		width 40px
		height 40px
		box-shadow 0 6px 14px rgba(0, 0, 0, 0.08)
		background-color #ffffff
		border-radius 50%
		transform translateY(-50%)
		
		+rmin($md)
			top calc(50% + 28px)
			display none
			
	&__arrow-icon
		position absolute
		top 50%
		left 50%
		width 8px
		height 12px
		transform translate(-50%, -50%) 
		
	&__arrow_prev
		left 0
		
		+rmin($md)
			left 1px
			
		.featured__arrow-icon
			left calc(50% - 2px)
			
	&__arrow_next
		right 0
		
		+rmin($md)
			right 1px
			
		.featured__arrow-icon
			left calc(50% + 2px)
			// left 50%
			transform translate(-50%, -50%) rotate(180deg) 


