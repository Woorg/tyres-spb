@font-face 
    font-family 'Open Sans'
    src local('Open Sans Regular'), local('OpenSans-Regular'),
        url('../fonts/hinted-OpenSans-Regular.woff2') format('woff2'),
        url('../fonts/hinted-OpenSans-Regular.woff') format('woff')
    font-weight normal
    font-style normal
    
@font-face 
    font-family 'Open Sans'
    src local('Open Sans SemiBold'), local('OpenSans-SemiBold'),
        url('../fonts/hinted-OpenSans-SemiBold.woff2') format('woff2'),
        url('../fonts/hinted-OpenSans-SemiBold.woff') format('woff')
    font-weight 600
    font-style normal
    
@font-face 
    font-family 'Avenir Next Cyr'
