.page
    min-height 100vh
    display flex
    flex-direction column
    background-color #f7f7f7
    color #626262
    font-display swap
    
    &__inner
        // flex 0 1 auto
        flex 1 0 auto

.title
    color #2f3437
    font-size 33px
    font-weight 500
    letter-spacing 0.01px
    line-height 1.3


.wysiwyg
    h2,
    h3
        margin-top 60px

        margin-bottom 24px
        color #000000
        font-size 22px
        font-weight 400
        letter-spacing 1px
        line-height 1.3
    h2,
    h3
        &:first-child
            margin-top 0
    h3
        margin-top 30px

    p
        margin-top 30px
        color #817f7f
        font-size 18px
        font-weight 400
        line-height 1.38
    

    ul
        margin-top 30px
        margin-bottom 35px
        margin-left 30px
        li
            color #817f7f
            font-size 18px
            font-weight 400
            line-height 1.38
        

